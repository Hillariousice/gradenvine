{
    "compilerOptions": {
      "rootDirs": ["src"],
      "outDir": "./dist",
      "target": "ES6",
      "module": "CommonJS",
      "esModuleInterop": true,
      "moduleResolution": "node",
      "types": ["module"],
      "forceConsistentCasingInFileNames": true,
      "strict": true,  
      "skipLibCheck": true    
    },
    "include":["src"]
  }